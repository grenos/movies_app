{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowJs": true,
        "jsx": "react-native",
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@*": ["./src/*"],
            "@Storage/*": ["./src/Storage/*"],
            "@Screens/*": ["./src/Screens/*"],
            "@Navigation/*": ["./src/Navigation/*"],
            "@Utils/*": ["./src/Utils/*"],
            "@Components/*": ["./src/Components/*"],
            "@Api/*": ["./src/Api/*"],
            "@Types/*": ["./src/Types/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
